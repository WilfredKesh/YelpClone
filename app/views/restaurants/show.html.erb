
<div class="row">
  <div class="col-md-3">

	 <%= image_tag @restaurant.image_url %>

	<h3>

	  <%= @restaurant.name %>
	</h3>
	 <div class="star-rating" data-score= <%= @average_rating %> ></div>
	 <p><%= "#{@reviews.length} reviews" %></p>

	<p>
	  <strong>Address:</strong>
	  <%= @restaurant.address %>
	</p>

	<p>
	  <strong>Phone:</strong>
	  <%= @restaurant.phone %>
	</p>

	<p>
	  <strong>Website:</strong>
	  <%= link_to @restaurant.website, @restaurant.website %>
	</p>

  	
  </div>

  <div class="col-md-9">
    <%= link_to "Write a Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

    <% if @reviews.blank? %>
       There are no reviews yet. Be the first one to write!

	  <% else %>
	     <table class="table">
	       <tbody>
	         <% @reviews.each do |review| %>
	           <tr>
	             <td>
	                 <div class="star-rating" data-score= <%=review.rating %> ></div>
	                 <p><%= review.comment %></p>             	
	             </td>	           	
	           </tr>

	         <% end %>

	       	
	       </tbody>
	     	
	     </table> 
	     


	<% end %>
  	
  </div>
	
</div>






<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-link" %> 
<%= link_to 'Back', restaurants_path, class: "btn btn-link" %>

<script >
	$('.star-rating').raty({
		path: 'https://s3-us-west-2.amazonaws.com/yelp-demo/stars', 
		readOnly: true,
		score: function(){
			return $(this).attr('data-score');
		}
	});
</script>